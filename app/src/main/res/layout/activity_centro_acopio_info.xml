<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".CentroAcopioInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/textview_background"
                android:textColor="@color/verdeSuave"
                android:fontFamily="@font/montserrat_black"
                android:text="GREENLAD"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="METAL LAND"
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/verdeSuave"
                android:background="@drawable/textview_background"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="30dp"
                android:paddingStart="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="30dp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/google" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/textview_background">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:src="@drawable/plasticos_titulo"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recicladora Metal Land se encarga de reciclar y disminuir la basura que se genera en la ciudad de Santa Cruz, separando los materiales que se puedan reciclar y que se reutilizan como aluminions."
                android:textColor="@color/blanco"
                android:layout_margin="10dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion: Av 2 de agosto a una cuadra del octavo anillo"
                android:textColor="@color/blanco"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Celular: 73182061"
                android:textColor="@color/blanco"
                android:layout_margin="10sp"/>

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horarios: De Lunes a sABADO DE 8:30 am a 17:00 pm"
                android:textColor="@color/blanco"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Volver"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:backgroundTint="@color/verdeSuave"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>