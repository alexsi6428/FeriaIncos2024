<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recolector_descripcionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvGREUno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvTituloREC2"
            android:textAlignment="center"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="410dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:src="@drawable/img_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/text_background2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNdos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvContenidodos2"
                    android:textAlignment="center"
                    android:textColor="@color/blanco"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/tvNtres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvcontenidotres3"
                    android:textColor="@color/blanco" />

                <TextView
                    android:id="@+id/tvNcuatro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvcontenidocuatro4"
                    android:textColor="@color/blanco" />

                <TextView
                    android:id="@+id/tvNcinco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvcontenidocinco5"
                    android:textColor="@color/blanco" />

                <TextView
                    android:id="@+id/tvNseis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvcontenidoseis6"
                    android:textColor="@color/blanco" />

                <TextView
                    android:id="@+id/tvNsiete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvcontenidosiete7"
                    android:textColor="@color/blanco" />

                <TextView
                    android:id="@+id/tvNocho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvcontenidoocho8"
                    android:textColor="@color/blanco" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="90dp"
                    android:layout_height="230dp"
                    android:layout_weight="1"
                    android:src="@drawable/hola" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnrecolector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_dark_background"
                android:text="Boton a otra sctivity" />

            <Button
                android:id="@+id/btnrechazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_dark_background"
                android:text="Rechazar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:src="@drawable/img_1" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>