<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Galeria">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/LogoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_logo"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/blanco"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/galeria"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>
        <HorizontalScrollView
            android:id="@+id/orizontal"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:contentDescription="@string/desc_horizontal_scroll_view">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="410dp"
                    android:layout_height="200dp"
                    android:scaleX="1.2"
                    android:src="@drawable/slaider_1" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="410dp"
                    android:layout_height="200dp"
                    android:scaleX="1.5"
                    android:src="@drawable/slaider_3" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="410dp"
                    android:layout_height="200dp"
                    android:scaleX="1.4"
                    android:src="@drawable/slaider_2" />
            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageButton
                                    android:id="@+id/card_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/card_1"
                                    android:contentDescription="@string/desc_my_image_button"
                                    android:scaleType="fitXY" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/font_title"
                                    android:text="Actividad recreativa"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    tools:ignore="RtlCompat" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageButton
                                    android:id="@+id/card_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/card_2"
                                    android:contentDescription="@string/desc_my_image_button"
                                    android:scaleType="fitXY" />

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/font_title"
                                    android:text="Manualidades"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    tools:ignore="RtlCompat" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageButton
                                    android:id="@+id/card_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/card_3"
                                    android:contentDescription="@string/desc_my_image_button"
                                    android:scaleType="fitXY" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/font_title"
                                    android:text="Ecologia"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    tools:ignore="RtlCompat" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageButton
                                    android:id="@+id/card_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/card_4"
                                    android:contentDescription="@string/desc_my_image_button"
                                    android:scaleType="fitXY" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/font_title"
                                    android:text="Actividades de concientización"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    tools:ignore="RtlCompat" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageButton
                                    android:id="@+id/card_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/card_5"
                                    android:scaleType="fitXY"
                                    android:contentDescription="@string/desc_my_image_button"/>

                                <TextView
                                    android:id="@+id/text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/font_title"
                                    android:text="Plantar un árbol"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    tools:ignore="RtlCompat" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageButton
                                    android:id="@+id/card_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/card_6"
                                    android:scaleType="fitXY"
                                    android:contentDescription="@string/desc_my_image_button"/>

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/font_title"
                                    android:text="Emprendimiento"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    tools:ignore="RtlCompat" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>


            </GridLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>