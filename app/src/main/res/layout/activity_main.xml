<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="305dp"
            app:srcCompat="@drawable/img" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="25dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="SELECCIONE USUARIO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReciclador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/verdeFuerte"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Reciclador" />

            <Button
                android:id="@+id/btnRecolector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:backgroundTint="@color/verdeMedio"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Recolector" />

            <Button
                android:id="@+id/btnVendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:backgroundTint="@color/verdeMedio"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Vendedor" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="50dp"
                app:srcCompat="@drawable/google" />

            <Button
                android:id="@+id/button24"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_height="70dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="@color/verdeFuerte"
                android:drawableStart="@drawable/google"
                android:text="Iniciar con Google" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Facebook"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="50dp"
                app:srcCompat="@drawable/facebook" />

            <Button
                android:id="@+id/btnFacebook"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat_bold"
                android:backgroundTint="@color/verdeFuerte"
                android:layout_height="70dp"
                android:layout_marginEnd="25dp"
                android:drawableStart="@drawable/google"
                android:text="Iniciar con Facebook" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btnVisitante"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:backgroundTint="@color/verdeFuerte"
                android:layout_height="70dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="35dp"
                android:drawableStart="@drawable/google"
                android:text="Iniciar como Visitante" />
        </LinearLayout>








    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>