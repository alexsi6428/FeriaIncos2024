<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".ForRecolectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="10dp"
            android:textSize="30dp"

            android:text="@string/tvBienvenido"

            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:text="Recolector" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"

            android:fontFamily="@font/montserrat_bold"
            android:text="@string/tvNombre"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/background_blanco"
            android:textColorHint="@color/blanco"
            android:layout_marginStart="25dp"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="30dp"
            android:hint="Nombre"
            android:padding="12dp"
            android:inputType="text"
            android:speakable="true" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18dp"
            android:layout_marginLeft="25dp"
            android:text="@string/tvDireccion" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background_blanco"
            android:textColorHint="@color/blanco"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp"
            android:padding="12dp"
            android:hint="direcion"
            android:inputType="text"
            android:speakable="true" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18dp"
            android:layout_marginLeft="25dp"
            android:text="@string/tvCI" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background_blanco"
            android:textColorHint="@color/blanco"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp"
            android:hint="ci/nit"
            android:padding="12dp"
            android:inputType="text"
            android:speakable="true" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18dp"

            android:layout_marginLeft="25dp"
            android:text="@string/tvTelefono1" />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background_blanco"
            android:textColorHint="@color/blanco"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp"
            android:hint="telefono"
            android:inputType="text"
            android:padding="12dp"
            android:speakable="true" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18dp"
            android:layout_marginLeft="25dp"
            android:text="@string/tvTelefono2" />

        <EditText
            android:id="@+id/editTextText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background_blanco"
            android:textColorHint="@color/blanco"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp"
            android:padding="12dp"
            android:hint="telefono 2"
            android:inputType="text"
            android:speakable="true" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18dp"
            android:layout_marginLeft="25dp"
            android:text="Acopios relacionados:" />

        <EditText
            android:id="@+id/editTextText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp"
            android:hint="Acopio 1"
            android:background="@drawable/background_blanco"
            android:textColorHint="@color/blanco"
            android:padding="15dp"
            android:inputType="text"
            android:speakable="true" />

        <EditText
            android:id="@+id/editTextText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="5"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp"
            android:hint="Acopio 2"
            android:background="@drawable/background_blanco"
            android:textColorHint="@color/blanco"
            android:padding="15dp"
            android:inputType="text"
            android:speakable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18dp"
                android:text="@string/tvSubirFoto" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:backgroundTint="@color/verdeFuerte"
                android:textSize="18dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="50dp"
                android:text="@string/btnBuscarImagen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <Button
                android:id="@+id/button11"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18dp"
                android:backgroundTint="@color/verdeFuerte"
                android:text="@string/btnRegistrarR" />

            <Button
                android:id="@+id/button12"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18dp"
                android:backgroundTint="@color/verdeFuerte"
                android:text="@string/btnVolver" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>